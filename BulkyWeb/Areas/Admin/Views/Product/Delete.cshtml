@{
	ViewData["Title"] = "Delete";
}
@model Product

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<form method="post">
			<div class="border p-3 mt-4">
				<div class="form-floating py-2 col-12">
					<input asp-for="Title" class="form-control border-0 shadow" disabled />
					<label asp-for="Title" class="ms-2">Title</label>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<textarea asp-for="Description" class="form-control border-0 shadow" disabled></textarea>
					<label asp-for="Description" class="ms-2">Description</label>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ISBN" class="form-control border-0 shadow" disabled />
					<label asp-for="ISBN" class="ms-2">ISBN</label>
					<span asp-validation-for="ISBN" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Author" class="form-control border-0 shadow" disabled />
					<label asp-for="Author" class="ms-2">Author</label>
					<span asp-validation-for="Author" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="ListPrice" class="form-control border-0 shadow" disabled />
					<label asp-for="ListPrice" class="ms-2">List Price</label>
					<span asp-validation-for="ListPrice" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price" class="form-control border-0 shadow" disabled />
					<label asp-for="Price" class="ms-2">Price for 1-50</label>
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price50" class="form-control border-0 shadow" disabled />
					<label asp-for="Price50" class="ms-2">Price for 50+</label>
					<span asp-validation-for="Price50" class="text-danger"></span>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Price100" class="form-control border-0 shadow" disabled/>
					<label asp-for="Price100" class="ms-2">Price for 100+</label>
					<span asp-validation-for="Price100" class="text-danger"></span>
				</div>
				<div class="row pt-2">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="index" class="btn btn-outline-primary border form-control">Back to List</a>
					</div>
				</div>


			</div>
		</form>
	</div>
</div>



