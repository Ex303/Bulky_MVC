@{
    ViewData["Title"] = "Product";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Company List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4 mb-5">
        <div class="row pb-4">
            <div class="col-12 text-end">
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Company
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped pb-5" id="tblData" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name 
                    </th>
                    <th>
                        StreetAddress
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        PostalCode
                    </th>
                    <th>
                        PhoneNumber
                    </th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/company.js"></script>
}